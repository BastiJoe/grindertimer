<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Setting">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <TextView
            android:id="@+id/textToolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"></TextView>
    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/scrollableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/pauseLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/settings_background"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textPauseDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:text="@string/textPauseDuration"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="normal"></TextView>

                <TextView
                    android:id="@+id/textPauseDurationValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/textPauseDurationInitial"
                    android:textSize="12sp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/showPowerLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/settings_background"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/textShowPowerLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewShowPower"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:text="@string/textShowPower"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="normal"></TextView>
                </LinearLayout>

                <Switch
                    android:id="@+id/showPowerSwitch"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"></Switch>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/showAdvancedLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/settings_background"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/textShowAdvancedLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewShowAdvanced"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:text="@string/textShowAdvancedSettings"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="normal"></TextView>

                </LinearLayout>

                <Switch
                    android:id="@+id/showAdvancedSwitch"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"></Switch>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/advancedSettingsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="false"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/waitLayout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/settings_background"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textWaitingPeriod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:text="@string/textWait"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="normal"></TextView>

                    <TextView
                        android:id="@+id/textWaitingPeriodValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/textWaitInitial"
                        android:textSize="12sp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/powerThresholdLayout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/settings_background"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textPowerThreshold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:text="@string/textPowerThreshold"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="normal"></TextView>

                    <TextView
                        android:id="@+id/textPowerThresholdValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/textPowerThresholdInitial"
                        android:textSize="12sp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/firmwareUpdationLayout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/settings_background"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textFirmwareUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:text="@string/textFirmwareUpdate"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="normal"></TextView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tutorialLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:animateLayoutChanges="false"
                android:background="@drawable/settings_background">

                <TextView
                    android:id="@+id/textTutorial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:text="@string/textTutorial"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="normal"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contactLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/settings_background">

                <TextView
                    android:id="@+id/textContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:text="@string/textContact"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="normal"></TextView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>